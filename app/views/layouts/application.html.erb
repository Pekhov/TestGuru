<!DOCTYPE html>
<html>
<head>
  <title><%= t('.testguru') %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<p><b><%= link_to "Test Guru", root_path %></b></p>
<% if user_signed_in? %>
  <p class="nav user"><b><%= t('.welcome', name: current_user.name) %> [<%= link_to t('.log_out'), destroy_user_session_path, method: :delete %>]</b></p>
<% else  %>
  <p class="nav menu">[<%= link_to t('.log_in'), new_user_session_path %>][<%= link_to t('.sign_up'), new_user_registration_path %>]</p>
<% end %>
<%= flash_messages %>
<%= yield %>
<%= render 'shared/footer' %>
</body>
</html>
