<h1>Question</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>
  <tr>
    <td><%= @question.body %></td>
  </tr>
</table>

<h2>Answers</h2>

<% link_to 'New answer', new_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<p>
  <%= link_to 'Edit', edit_question_path %>
  <%= link_to 'Back', test_questions_path(@question.test) %>
</p>
