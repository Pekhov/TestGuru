<h1>Tests</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th colspan="2">Actions</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= link_to 'Show', test_path(test) %></td>
      <td><%= link_to "Show questions(#{test.questions.count})", test_questions_path(test) %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'New test', new_test_path %>
</p>
