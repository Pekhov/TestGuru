<div class="row justify-content-center mt-3">
  <div class="col col-md-10 ">

    <h3><%= t('.test', test: @test.title) %></h3>

    <table>
      <tr>
        <th><%= t('.test_title') %></th>
        <th><%= t('.test_level') %></th>
      </tr>
      <tr>
        <td><%= @test.title %></td>
        <td><%= @test.level %></td>
      </tr>
    </table>

    <div class="card border-primary">
      <div class="card-body">
        <h3><%= t('.test_questions', test: @test.title) %></h3>
        <table>
          <tr>
            <th><%= t('.question_body') %></th>
            <th colspan="3"><%= t('.actions') %></th>
          </tr>
          <tr>
            <td><%= render @test.questions %></td>
          </tr>
        </table>
      </div>
    </div>
    <p>
      <%= link_to t('.new_question'), new_test_admin_question_path(@test) %>
    </p>
    <p>

      <%= link_to t('.back'), admin_tests_path %>
    </p>
  </div>
</div>
