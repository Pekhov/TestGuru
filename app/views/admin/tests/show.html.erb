<h1><%= t('.test', test: @test.title) %></h1>

<table>
  <tr>
    <th><%= t('.test_title') %></th>
    <th><%= t('.test_level') %></th>
  </tr>
    <tr>
      <td><%= @test.title %></td>
      <td><%= @test.level %></td>
    </tr>
</table>

<h2><%= t('.test_questions', test: @test.title) %></h2>
<table>
  <tr>
    <th><%= t('.question_body') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  <tr>
    <td><%= render @test.questions %></td>
  </tr>
</table>
<p>
  <%= link_to t('.new_question'), new_test_admin_question_path(@test) %>
</p>
<p>

  <%= link_to t('.back'), admin_tests_path %>
</p>
