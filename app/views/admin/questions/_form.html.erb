<h1><%= question_header %></h1>

<%= form_with model: @question, url: @question.new_record? ? [:admin, @test, @question] : [:admin, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, rows: 7, cols: 60 %>
  </p>
  <p><%= form.submit %></p>
<%  end %>
